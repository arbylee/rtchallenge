<%= @challenge %>

<%= form_tag '/reviews' do %>
  <% @movies.each_with_index do |movie, idx| %>
    <%= label_tag "reviews[#{idx}][#{movie.id}]", movie.title %>
    <%= hidden_field_tag "reviews[#{idx}][movie_id]", movie.id %>
    <%= text_field_tag "reviews[#{idx}][score]" %>
  <% end %>
  <%= submit_tag "SUBMIT!" %>
<% end %>
